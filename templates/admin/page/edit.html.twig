{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>Edit Page</h1>

                {{ form_start(form) }}
                {{ form_row(form.title) }}
                {{ form_row(form.content) }}
                {{ form_row(form.slug) }}
                {% if page.featuredImage != "" %}
                    <img height="200px" width="200px" src="{{page_upload_dir ~ page.featuredImage }}" alt="page-image">
                {% endif %}
                {{ form_row(form.Image) }}
                {{ form_row(form.status) }}
                <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>


{% endblock %}


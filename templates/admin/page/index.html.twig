{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
    <div class="row mt-2">
        <div class="col-md-3 offset-9">
            <a class="btn btn-primary align-content-center" href="{{ path('admin_page_add') }}">Add Page</a>
        </div>
    </div>
   <div class="row">
       <div class="col-md-12">
           <h2>Pages</h2>
           <table class="table table-striped table-bordered">
                <thead>
                     <tr>
                          <th>Id</th>
                          <th>Title</th>
                          <th>Content</th>
                          <th>Status</th>
                          <th>Actions</th>
                     </tr>
                </thead>
                <tbody>
                     {% for page in pagination %}
                     <tr>
                          <td>{{ page.id }}</td>
                          <td>{{ page.title }}</td>
                          <td>{{ page.content }}</td>
                         <td>{{ page.status==true?"Active":"In-Active" }}</td>
                         <td>
                            <a class="btn btn-dark" href="{{ path('admin_page_show', { 'id': page.id }) }}">show</a>
                            <a class="btn btn-primary" href="{{ path('admin_page_edit', { 'id': page.id }) }}">edit</a>
                            <a class="btn btn-danger" href="{{ path('admin_page_delete', { 'id': page.id }) }}">delete</a>
                          </td>
                     </tr>
                     {% endfor %}
                </tbody>
           </table>
       </div>
   </div>
    <div class="row">
        {{ knp_pagination_render(pagination) }}
    </div>
</div>
{% endblock %}